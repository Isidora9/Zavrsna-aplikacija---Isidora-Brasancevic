@model IEnumerable<ZavrsnaAplikacija.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2 class="my-2">Customers</h2>

<table id="customers" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicNo)
            </th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#customers").DataTable({
                ajax: {
                    //url: "/api/genres",
                    //dataSrc: ""

                    url: "/Customers/GetCustomers",
                    "type": "GET",
                    "datatype": "json"
                },
                columns: [
                    {
                        data: "Name"
                    },
                    {
                        data: "DriverLicNo"
                    }
                ]
            })
        })
    </script>
}



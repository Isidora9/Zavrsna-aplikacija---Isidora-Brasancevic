@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Add New Role";
}
<h2 class="my-2">Add New User Role:</h2>

@using (Html.BeginForm())
{
    <span> Enter User Role Name:</span>
    <div class="form-group">
        <div class="col-md-3">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control mb-4" } })
            <input type="submit" class="btn btn-default btn-outline-success" value="Create Role" />
        </div>
    </div>
}

@model IEnumerable<ZavrsnaAplikacija.Models.Rental>

@{
    ViewBag.Title = "Index";
}

<h2 class="my-2">Rentals</h2>

<table id="rentals" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Car.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateRented)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateReturned)
            </th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#rentals").DataTable({
                ajax: {
                    url: "/Rentals/GetRentals",
                    "type": "GET",
                    "datatype": "json"
                },
                columns: [
                    {
                        data: "CarManufacturer"
                    },
                    {
                        data: "CustomerName"
                    },
                    {
                        data: "DateRented",
                        "render": function (date) {
                            return moment(date).format('DD/MM/YYYY');
                        }
                    },
                    {
                        data: "DateReturned",
                        "render": function (date) {
                            return moment(date).format('DD/MM/YYYY');
                        }
                    }
                ]
            })
        })
    </script>
}


